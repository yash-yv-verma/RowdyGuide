<?xml version="1.0" encoding="utf-8"?>

<!-- Author: Anju Soman -->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <TextView
        android:id="@+id/EditProfileText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="0dp"
        android:text="Edit Profile"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:background="@color/light_blue"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="@font/syncopate_bold"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        app:layout_constraintTop_toBottomOf="@id/EditProfileText"
        android:gravity="center"
        android:orientation="vertical">


        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Name"
            android:fontFamily="@font/abeezee"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="12dp"
            android:drawableTint="@color/dark_blue"
            android:paddingLeft="12dp"
            android:textColor="#000000"
            android:textColorHint="#D4D4D4"
            android:textSize="24dp"/>


        <EditText
            android:id="@+id/editClassification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Classification"
            android:ems="10"
            android:entries="@array/classification"
            android:fontFamily="@font/abeezee"
            android:paddingLeft="12dp"
            android:drawableStart="@drawable/ic_gradcap"
            android:layout_marginTop="25dp"
            android:drawablePadding="12dp"
            android:drawableTint="@color/dark_blue"
            android:textColor="#000000"
            android:textColorHint="#D4D4D4"
            android:textSize="24dp"/>



        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="12dp"
            android:drawableTint="@color/dark_blue"
            android:ems="10"
            android:fontFamily="@font/abeezee"
            android:hint="Email address"
            android:inputType="textEmailAddress"
            android:paddingLeft="12dp"
            android:textColor="#000000"
            android:textColorHint="#D4D4D4"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/editContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:hint="Phone number"
            android:fontFamily="@font/abeezee"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="12dp"
            android:drawableTint="@color/dark_blue"
            android:layout_marginTop="25dp"
            android:paddingLeft="12dp"
            android:textColor="#000000"
            android:textColorHint="#D4D4D4"
            android:textSize="24dp"/>

        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#779ECC"
            android:fontFamily="@font/abeezee"
            android:text="Create account"
            android:textColor="#FFFFFF"
            android:textSize="24dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>